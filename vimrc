" Syntax Highlighting
if has("syntax")
    syntax on
endif

set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set ts=4
set autoindent
set cindent
set smartindent
set nu
set hlsearch
set shiftwidth=4
set showmatch
set autoread
set autowrite
set history=256
colo afterglow


set laststatus=2
set statusline=\ %<%l:%v\ [%P]%=%a\ %h%m%r\ %F\
